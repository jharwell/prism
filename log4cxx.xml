<?xml version="1.0" encoding="UTF-8" ?>
 <log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
  <!-- Output the log message to system console. -->
  <appender
      name="__console__"
  class="log4cxx.ConsoleAppender">
    <param name="Target" value="System.out"/>
        <layout class="log4cxx.PatternLayout">
            <param name="ConversionPattern" value="%x [%-5p] %c - %m%n"/>
        </layout>
  </appender>

  <root>
        <priority value="info" />
        <appender-ref ref="__console__"/>
  </root>

  <!-- Specify the level for some specific categories -->
  <category name="cosm.ta.executive" >
    <priority value ="info" />
  </category>
  <category name="cosm.steer2D.force_calculator" >
    <priority value ="info" />
  </category>
  <category name="cosm.subsystem" >
    <priority value ="info" />
  </category>
  <category name="cosm.tv.population_dynamics" >
    <priority value ="info" />
  </category>
  <category name="prism.gmt.static_spct_builder" >
    <priority value ="debug" />
  </category>
  <category name="prism.gmt.operations" >
    <priority value ="trace" />
  </category>
  <category name="prism.gmt" >
    <priority value ="trace" />
  </category>
  <category name="prism.gmt.slice2D" >
    <priority value ="trace" />
  </category>

  <category name="prism.controller" >
    <priority value ="info" />
  </category>

  <category name="prism.fsm" >
    <priority value ="debug" />
  </category>
  <category name="prism.fsm.builder_util" >
    <priority value ="trace" />
  </category>
  <category name="prism.fsm.fs_acq_checker" >
    <priority value ="trace" />
  </category>
  <category name="prism.controller.perception.builder_prox_checker" >
    <priority value ="debug" />
  </category>
  <category name="prism.repr.construction_lane" >
    <priority value ="trace" />
  </category>
  <category name="prism.fsm.gmt_ingress" >
    <priority value ="trace" />
  </category>
  <category name="rcppsw.ds.graph.hgrid3D_view_filter_data" >
    <priority value ="trace" />
  </category>
  <category name="rcppsw.ds.graph.hgrid3D_view_filter" >
    <priority value ="trace" />
  </category>


  <category name="cosm.steer2D.force_calculator" >
    <priority value ="info" />
  </category>

  <category name="cosm.spatial.fsm" >
    <priority value ="info" />
  </category>

 </log4j:configuration>
